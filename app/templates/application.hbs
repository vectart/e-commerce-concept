<header>
  {{#link-to 'index' class='logo'}}
    Chairs<br/>
    For<br/>
    Home
  {{/link-to}}
</header>

<article id="store">
  <section id="category">
    <h3>Mid-Century Chairs</h3>
    <div class="scrollable">
      <ul id="panel">
        <li>
          <span>{{material-design-icon name='view-module' size='4x'}}</span>
          <span>{{material-design-icon name='view-headline' size='4x'}}</span>
        </li>
        <li><input type="search" /></li>
      </ul>
      <ul id="products">
        {{#each product in model}}
          {{product-snippet product=product}}
        {{/each}}
      </ul>
    </div>
  </section>
  <section id="product">
    {{outlet}}
  </section>
  {{#link-to 'index' class='back'}}
    {{material-design-icon name='chevron-left' size='4x'}}
  {{/link-to}}
  <div id="overlay" {{action 'hideCart'}}></div>
</article>

<article id="cart">
  {{cart-details action='toggleCart'}}
</article>

